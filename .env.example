# Django Settings
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (для разработки используется SQLite, для продакшена - PostgreSQL)
# Оставьте пустым для использования SQLite
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Celery (опционально, для уведомлений)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Telegram Backup Notifications (опционально)
# Получите токен от @BotFather в Telegram
TELEGRAM_BOT_TOKEN=
# ID чата или канала для уведомлений (начинается с - для каналов)
TELEGRAM_CHAT_ID=
# Включить/выключить Telegram уведомления (true/false)
TELEGRAM_ENABLED=false
# Включить/выключить загрузку файлов в Telegram (true/false)
TELEGRAM_UPLOAD_FILES=true
# Максимальный размер файла для загрузки в MB (лимит Telegram Bot API: 50MB)
TELEGRAM_MAX_FILE_SIZE=45
